{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "express", "jest"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__"]
}
